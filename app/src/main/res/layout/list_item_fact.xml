<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fact_title"
        tools:text="This is a pretty long title.." />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fact_description"
        android:layout_below="@id/txt_title"
        android:layout_alignLeft="@+id/txt_title"
        android:layout_toLeftOf="@+id/img_thumbnail"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        tools:text="This is a pretty long description. This is a pretty long description This is a pretty long description  .." />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/txt_description"
        android:layout_alignParentRight="true" />


</RelativeLayout>
